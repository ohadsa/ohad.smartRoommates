<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundBigg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


    <RelativeLayout
        android:id="@+id/expenseDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/expenseDetailItemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:contentDescription="icon"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_expense_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Expense_LBL_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/expenseDetailItemImage"
            android:layout_toEndOf="@+id/expenseDetailItemImage"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Vegetables"
            android:ellipsize="end"
            android:textColor="@color/appReg"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseDetailCurrency"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:text="$"
            android:layout_alignTop="@+id/expenseDetailItemImage"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"
            android:layout_marginTop="68.1dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Expense_LBL_Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/expenseDetailItemImage"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/expenseDetailCurrency"
            android:layout_toRightOf="@+id/expenseDetailCurrency"
            android:text="2534232342423424224"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Expense_LBL_Payer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/expenseDetailItemImage"
            android:layout_toRightOf="@+id/expenseDetailItemImage"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Paid By: Israel israeli"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/expenseDetailItemImage"
            android:layout_marginTop="68dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@color/appReg"/>

    </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/options_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editExpenseBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:text="edit"
                android:backgroundTint="@color/appReg"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="50dp"
                app:strokeColor="@color/black" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteExpenseBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:text="delete"
                android:backgroundTint="#E53935"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="50dp"
                app:strokeColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>