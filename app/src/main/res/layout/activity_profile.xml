<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/ic_baseline_phone_android_24"
    tools:context=".Authentication.ProfileActivity">




    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logoroonates"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wellcome !"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="28dp"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textAlignment="center"
        android:textColor="@color/appReg" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >


        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Please enter your details"
            android:textSize="21dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/appReg" />

        <FrameLayout
            android:id="@+id/userImage_Frame"
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/userImage_Propile_Activity"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/background_image"
                app:riv_oval="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/no_picture"
                />

            <TextView
                android:id="@+id/txt_userImage_Propile_Activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:text="add image"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>


        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:gravity="center"
            android:layout_marginHorizontal="60dp"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#c5c5c5" >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:hint="first name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/familyNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="#fff"
            android:layout_marginHorizontal="60dp"
            android:hint="family name"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#c5c5c5" >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="#fff"
            android:layout_marginHorizontal="60dp"
            android:hint="abc@def.ghi"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#c5c5c5" >

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#c5c5c5" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/privateDetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Continue"
            android:backgroundTint="@color/backgroundBigg"
            android:layout_margin="24dp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/appReg"
            app:strokeColor="@color/appReg"
            app:cornerRadius="50dp"
            />



    </LinearLayout>


</LinearLayout>