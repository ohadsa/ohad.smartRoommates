    <com.google.android.material.card.MaterialCardView
        android:id="@+id/totalBalance_MCV"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/backgroundBigg"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_LBL_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxWidth="180dp"
                android:maxLines="2"
                android:text="Your total balance : "
                android:textColor="@color/purple_700"
                android:textSize="19sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/total_LBL_balance"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_alignTop="@+id/title_LBL_balance"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="28sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_LST_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/totalBalance_MCV" />


