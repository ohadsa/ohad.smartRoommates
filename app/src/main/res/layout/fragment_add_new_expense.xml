<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/new_Expense_LBl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Share new expnse \nwith the group"
        android:textColor="@color/appReg"
        android:textSize="27dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_Et"
        android:layout_marginHorizontal="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_Expense_LBl"
        android:gravity="center"
        android:hint="description"
        android:inputType="textCapWords"
        app:hintTextColor="#c5c5c5"
        android:textColorHint="#c5c5c5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="80"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cost_Et"
        android:layout_marginHorizontal="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/description_Et"
        android:gravity="center"
        android:hint="cost"
        app:hintTextColor="#c5c5c5"
        android:textColorHint="#c5c5c5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="30"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_Expense_Btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/cost_Et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="save and exit"
        android:textAllCaps="false"
        android:textColor="@color/appReg"
        app:cornerRadius="50dp"
        app:strokeColor="@color/appReg" />


</RelativeLayout>